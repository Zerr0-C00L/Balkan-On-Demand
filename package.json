{
  "name": "balkan-stremio-addon",
  "version": "4.1.0",
  "description": "Stremio addon for Balkan movies and TV shows with Apple TV support",
  "main": "addon.js",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "start": "node addon.js",
    "start:old": "node addon.js",
    "start:tmdb": "node addon-tmdb-catalogs.js",
    "start:enhanced": "node addon-tmdb-enhanced.js",
    "dev": "nodemon addon-enhanced.js",
    "dev:tmdb": "nodemon addon-tmdb-catalogs.js",
    "dev:enhanced": "nodemon addon-tmdb-enhanced.js",
    "mapping:create": "node scripts/create-tmdb-symlinks.js",
    "mapping:verify": "node -e \"console.log(require('./data/tmdb-id-mapping.json'))\""
  },
  "keywords": [
    "stremio",
    "addon",
    "balkan",
    "movies",
    "ex-yugoslavia"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "lz-string": "^1.5.0",
    "stremio-addon-sdk": "^1.6.10",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
